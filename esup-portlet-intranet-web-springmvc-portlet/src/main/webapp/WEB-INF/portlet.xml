<?xml version="1.0" encoding="UTF-8"?>
<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
    <portlet>
        <portlet-name>esup-portlet-intranet</portlet-name>
        <display-name xml:lang="fr">esup-portlet-intranet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>classpath:portletContext.xml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
        </supports>
        <supported-locale>fr</supported-locale>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>esup-portlet-intranet</title>
            <short-title>esup-portlet-intranet</short-title>
            <keywords>esup-portlet-intranet</keywords>
        </portlet-info>
        <portlet-preferences>
            <preference>
                <name>nuxeoHost</name>
                <value>http://enor.univ-rennes1.fr:8080/nuxeo</value>
            </preference>
            <preference>
                <name>intranetPath</name>
                <value>/default-domain/workspaces/devq</value>
            </preference>
            <preference>
                <name>nuxeoPortalAuthSecret</name>
                <value>secret</value>
            </preference>
        </portlet-preferences>
    </portlet>
    <user-attribute>
        <name>uid</name>
    </user-attribute>
    <user-attribute>
        <name>username</name>
    </user-attribute>
</portlet-app>
